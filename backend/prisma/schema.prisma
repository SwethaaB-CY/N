generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(uuid())
  fullName          String
  email             String   @unique
  password          String
  userType          String
  resetToken        String?
  resetTokenExpiry  DateTime?

  // Common fields
  phoneNumber       String?
  gender            String?
  profilePicture    String?

  // Relationships
  student           Student?

  // Timestamps
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Student {
  userId            String   @id
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Student-specific fields
  collegeName       String

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
